---
type Props = {
    title?: string,
    id?: string,
    text: string
}

const { title, text, id } = Astro.props

---

<div class="max-w-screen-lg	mx-auto p-2 scroll-mt-[80px]" id={id || ''} >
    {title && <h2 class="text-3xl text-gray-900 pt-5 pb-3">{title}</h2>}
    <p class="text-gray-900">{text}</p>
</div>