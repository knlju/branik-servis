---
import Call from "../Icons/Call.astro"
import SMS from "../Icons/SMS.astro"
import Viber from "../Icons/Viber.astro"
import Whatsapp from "../Icons/Whatsapp.astro"

const phoneNumber = "381611804293"
---

<div
	class="mx-auto max-w-lg text-center text-lg mt-6 mb-2 scroll-mt-[80px]"
	id="apps"
>
	Kontaktirajte nas putem jedne od sledećih opcija:
</div>
<div class="flex justify-center gap-6 mb-8">
	<button>
		<a
			href={`https://api.whatsapp.com/send?phone=${phoneNumber}&text=Zdravo, želim da zakažem termin za servis kod Auto Servisa Kastratović.`}
			target="_blank"
			rel="noopener"
			class="flex flex-col items-center"
		>
			<Whatsapp />WhatsApp
		</a>
	</button>

	<div>
		<button>
			<a href={`viber://chat/?number=%2B${phoneNumber}`}>
				<Viber />Viber
			</a>
		</button>
	</div>

	<div>
		<button>
			<a
				href={`sms:+${phoneNumber}?body=Zdravo, želim da zakažem termin za servis kod Auto Servisa Kastratović.`}
			>
				<SMS />SMS
			</a>
		</button>
	</div>

	<div>
		<button>
			<a href={`tel:+${phoneNumber}`}>
				<Call />Poziv
			</a>
		</button>
	</div>
</div>
